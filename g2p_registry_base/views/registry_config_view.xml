<odoo>

    <record id="g2p_registry_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.g2p.registry</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div
                    class="app_settings_block"
                    data-string="G2P Registry"
                    data-key="g2p_registry_base"
                    string="G2P Registry"
                    groups="g2p_registry_base.group_g2p_admin"
                >
                    <h2>Job Queue</h2>
                    <div class="row mt16 o_settings_container" id="management">
                        <div class="col-12 col-lg-6 o_setting_box" id="max_reg_config">
                            <div class="o_setting_right_pane">
                                <label for="max_registrants_count_job_queue" string="Maximum Registrants" />
                                <div class="text-muted">
                                    Maximum number of registrants to process before running job queue
                                </div>
                                <div class="content-group mt16">
                                    <field name="max_registrants_count_job_queue" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box" id="batch_reg_config">
                            <div class="o_setting_right_pane">
                                <label
                                    for="batch_registrants_count_job_queue"
                                    string="Registrants per Batch"
                                />
                                <div class="text-muted">
                                    Number of registrants per batch to be processed with job queue
                                </div>
                                <div class="content-group mt16">
                                    <field name="batch_registrants_count_job_queue" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="g2p_registry_res_config_settings_menu_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="g2p_registry_res_config_settings_view_form" />
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'g2p_registry_base'}</field>
    </record>

   <menuitem
        id="menu_registry_config"
        name="Settings"
        action="g2p_registry_res_config_settings_menu_action"
        parent="g2p_configuration_menu_root"
        sequence="0"
        groups="g2p_registry_base.group_g2p_admin"
    />

</odoo>
